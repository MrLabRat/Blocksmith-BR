{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blocksmith",
  "version": "0.1.0",
  "identifier": "com.blocksmith.packmover",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:29999",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Blocksmith",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*",
      "icons/*.png"
    ]
  }
}
